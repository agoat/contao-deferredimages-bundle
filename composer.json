{
    "name": "agoat/contao-deferredimages",
    "type": "contao-bundle",
    "description": "Contao deferred images library",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Arne Stappen",
            "homepage": "https://github.com/agoat"
        }
    ],
    "require": {
        "php": "^5.6|^7.0",
        "symfony/framework-bundle": "~2.8|~3.0",
        "contao/core-bundle": "^4.4",
        "contao/image": "^0.3"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.5"
    },
    "replace": {
        "contao-legacy/imageondemand": "*"
    },
    "autoload": {
        "psr-4": {
            "Agoat\\DeferredImagesBundle\\": "src/"
       },
        "classmap": [
            "src/Resources/contao"
        ],
        "exclude-from-classmap": [
            "src/Resources/contao/config",
            "src/Resources/contao/dca",
            "src/Resources/contao/languages",
            "src/Resources/contao/templates",
            "../../contao/core-bundle/src/Resources/contao/library/Contao/File.php"
         ]
    }
}
